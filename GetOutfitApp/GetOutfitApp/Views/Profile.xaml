<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GetOutfitApp.Views.Profile"
             xmlns:vm ="clr-namespace:GetOutfitApp.ViewModel"
             Appearing="ContentPage_Appearing"
            Title="GetOutfit">
    
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Margin="10">
                <Label Style="{StaticResource HeaderLabel}">Общее</Label>

                <Label>
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Имя: " />
                            <Span Text="{Binding Fullname}"   />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>

                <Label>
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Логин: " />
                            <Span Text="{Binding Login}"  />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>

            </StackLayout>
           
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>